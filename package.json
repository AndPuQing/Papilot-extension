{
  "name": "papilot",
  "displayName": "Papilot",
  "description": "An open source programming assistant",
  "version": "0.0.2",
  "publisher": "PuQing",
  "engines": {
    "vscode": "^1.70.0"
  },
  "icon": "assets/icon.png",
  "qna": "https://github.com/AndPuQing/Papilot-extension/issues",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Papilot Configuration",
      "properties": {
        "papilot.url": {
          "type": "string",
          "description": "The URL of the Papilot server",
          "default": "http://localhost:8000"
        },
        "papilot.maxTokens": {
          "type": "number",
          "description": "The maximum number of tokens to generate",
          "default": 16
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "vsce": "^2.10.0"
  },
  "vsce": {
    "yarn": true
  }
}